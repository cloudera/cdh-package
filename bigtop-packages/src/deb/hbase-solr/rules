# -*- makefile -*-

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

%:
	dh $@

override_dh_auto_build:
	rm -rf bigtop-empty
	mkdir bigtop-empty
	env FULL_VERSION=${HBASE_SOLR_PATCHED_VERSION} bash -x debian/do-component-build -Drat.basedir=$${PWD}/bigtop-empty

override_dh_auto_install:
	bash -x debian/install_hbase_solr.sh \
	  --build-dir=$${PWD} \
	  --doc-dir=/usr/share/doc/hbase-solr-doc \
	  --prefix=debian/tmp \
	  --extra-dir=debian/
	install -d -m 0755 debian/tmp/etc/init.d
	bash debian/init.d.tmpl debian/hbase-solr-indexer.svc deb debian/tmp/etc/init.d/hbase-solr-indexer
	chmod 755 debian/tmp/etc/init.d/hbase-solr-indexer
