set -ex

function clean_cmake_files {
  find $WORKSPACE -iname '*cmake*' -not -name CMakeLists.txt \
      | grep -v -e cmake_module \
      | grep -v -e thirdparty \
      | grep -v -e toolchain/build \
      | xargs rm -Rf
}

export LLVM_HOME=/opt/toolchain/llvm-3.3
export PATH=$LLVM_HOME/bin:$PATH
export IMPALA_HOME=`pwd`
export PIC_LIB_PATH=/opt/toolchain/impala_3rdparty-0.5
export BOOST_ROOT=/opt/toolchain/boost-pic-1.55.0
export DISABLE_CCACHE=1
export IMPALA_TOOLCHAIN=$IMPALA_HOME/toolchain/build
if [ -z "$GIT_REPO" ]; then
    IMPALA_TOOLCHAIN=$IMPALA_HOME/toolchain/build
    cd $IMPALA_HOME
    . bin/impala-config.sh
    # Download the latest dependency versions if needed.
    bin/bootstrap_toolchain.py || { echo "toolchain bootstrap failed"; exit 1; }

    # Don't run $IMPALA_HOME/bin/clean.sh because that uses git commands and this isn't
    # a git repo.
    clean_cmake_files
    ./buildall.sh -noclean -notests   # Debug build.

    # Don't clean non-cmake artifacts, the debug binaries will be packaged.
    clean_cmake_files
    ./bin/make_release.sh -notests -build_static_libs
else
    rm -rf build impala-${FULL_VERSION}
    ALL_FILES=`echo *`
    mkdir build impala-${FULL_VERSION}
    cp -r $ALL_FILES impala-${FULL_VERSION}
    tar czf build/impala-${FULL_VERSION}.tar.gz impala-${FULL_VERSION}
fi
